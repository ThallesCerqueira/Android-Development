<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_cappuccino"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:background="@color/brown"
        android:gravity="center"
        android:text="Cappuccino"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="@id/txt_cappuccino"
        app:layout_constraintTop_toTopOf="@id/txt_cappuccino" />

    <ImageView
        android:id="@+id/ic_watch"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_watch"
        app:layout_constraintEnd_toStartOf="@id/ic_favorite"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_cappuccino" />

    <ImageView
        android:id="@+id/ic_favorite"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="130dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintStart_toEndOf="@id/ic_watch"
        app:layout_constraintTop_toTopOf="@id/ic_watch" />

    <TextView
        android:id="@+id/txt_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintStart_toStartOf="@id/ic_watch"
        app:layout_constraintTop_toBottomOf="@+id/ic_watch" />

    <TextView
        android:id="@+id/txt_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="54214"
        app:layout_constraintStart_toStartOf="@id/ic_favorite"
        app:layout_constraintTop_toBottomOf="@id/ic_favorite" />

    <View
        android:id="@+id/view_empty"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="18dp"
        android:layout_marginTop="15dp"
        android:background="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_watch" />

    <TextView
        android:id="@+id/txt_simple_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/principal_sentence"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_empty" />

    <TextView
        android:id="@+id/txt_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="16dp"
        android:text="Ingredientes"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_simple_text" />

    <ImageView
        android:id="@+id/ic_first_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_revenue" />

    <TextView
        android:id="@+id/txt_revenue_first_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 dose Expresso"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ic_first_arrow_right"
        app:layout_constraintTop_toTopOf="@id/ic_first_arrow_right"

        />

    <ImageView
        android:id="@+id/ic_second_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_revenue_first_arrow" />

    <TextView
        android:id="@+id/txt_revenue_second_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100mL de leite"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ic_second_arrow_right"
        app:layout_constraintTop_toTopOf="@id/ic_second_arrow_right"

        />

    <ImageView
        android:id="@+id/ic_third_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_revenue_second_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 colher de chocolate em pÃ³"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ic_third_arrow_right"
        app:layout_constraintTop_toTopOf="@id/ic_third_arrow_right"

        />


</androidx.constraintlayout.widget.ConstraintLayout>