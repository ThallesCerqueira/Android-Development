<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/purle"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ic_infinit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_infinit" />

        <ImageView
            android:id="@+id/ic_sentiment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/ic_infinit"
            android:layout_weight="1"
            android:src="@drawable/ic_sentiment" />

        <ImageView
            android:id="@+id/ic_sun"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/ic_sentiment"
            android:layout_weight="1"
            android:src="@drawable/ic_sun" />


    </LinearLayout>

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="@string/text_hello"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/txt_phrase" />

    <View
        android:layout_width="128dp"
        android:layout_height="1dp"
        android:layout_below="@+id/text_phrase"
        android:layout_centerHorizontal="true"
        android:background="@color/purle"
        android:text="@string/txt_above_phrase" />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/purle"
        android:text="@string/button_new_phrase"

        />


</RelativeLayout>